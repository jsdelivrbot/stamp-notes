<h2>Build a Widget</h2>


<div  class="code-block console-wrap">
<div class="code code-block">
<code>
$('#msg3').css({'height':'300px',
                                         'margin':'0px',
                                         'background':'#ededed',
                                         'border':'1px solid white',
                                         'margin-right':'0px',
                                         'background':'#ececec',
                                         'padding':'0px',
                                         'padding-right':'0px'}).width('280px')
                            .addClass('curvy')
                            .html('&lt;img src="http://localhost/CodeIgniter/images/users/robert_DeNiro_2006.jpg" style="width:100px" &gt;');

var options = {
  revert: false,
  opacity: '0.35'

}

$("#msg3").draggable(options);


</code>
</div>
<div  class="msg draggable" id="msg3" style="z-index:9999;font-family:monospace;line-height:1.3">
</div>
<div class="console"> </div>
<button class="eval">Run Code!</button>
<ol class="results"></ol> 
<div id="widget"></div>
</div>





  







                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                      