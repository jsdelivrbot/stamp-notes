<script type="text/javascript">
$(document).ready(function(){
    // cache
  
    var  plus=$('span#plus');
            plus.text('+');
    var exercise=$('.exercise').eq(0);
    var h=exercise.css('height');  
     plus.css('color','blue');
     
     
    $('.collapser').eq(0).css('height',h);
          
     $('#plus').click(function(){
            plus.text('-'); 
            h1=exercise.css('height');
           $('.collapser').eq(0).css('height',h1);
           $('.exercise').toggle('slow');
           $('.lines').toggle();
              
      });
    

});
</script>


