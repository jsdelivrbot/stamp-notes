      if (goog.dom.$('openOnKeyDown').checked) {
        var code = e.keyCode;
        switch (code) {
          case goog.events.KeyCodes.MAC_ENTER:
          case goog.events.KeyCodes.ENTER:
            dialog1.setVisible(true);
