     $.getScript('/CodeIgniter/js/jspos/POSTagger.js', function(){
       log('script POSTagger loaded and executed');});
  return false;
});

$(document).ready(function(){
var z  = $("#input_text").text();
var words = new Lexer().lex(z);
var taggedWords = new POSTagger().tag(words);
var result = "";
for (var i in taggedWords) {
  var taggedWord = taggedWords[i];
  var word = taggedWord[0];
  var tag = taggedWord[1];
  // Note the use of document.writeln instead of print
  result += (word + ' /' + tag +', ');
}
$("#tagged_text").text(result).show();
});
