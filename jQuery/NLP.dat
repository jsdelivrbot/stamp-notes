$('#ajax-button-01').click(function(){
     $.getScript('/CodeIgniter/js/jspos/lexer.js', function(){
       log('script lexer.js loaded and executed');});

     $.getScript('/CodeIgniter/js/jspos/lexicon.js_', function(){
